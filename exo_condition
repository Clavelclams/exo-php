<?php
    $a = 4;
    $b = 3;
    if ($a > $b){
        echo "$a est plus grand que $b";
    } else {
        echo "$a est moins grand qu $b";
    }
//operateur ternaire
/* si if peut s'ecrir de cette manierre exemple :
if ($age>=18){
